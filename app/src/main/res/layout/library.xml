<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/topnav" />
    <TextView
        android:id="@+id/course_libr"
        android:layout_width="300dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="Course Library"
        android:gravity="top"
        android:fontFamily="@font/poppins_medium"
        android:lineHeight="39sp"
        android:textSize="26sp"/>

    <ScrollView
        android:layout_width="372dp"
        android:layout_height="507dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="27dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/cpr_game"
                        android:layout_width="165dp"
                        android:layout_height="165dp"
                        android:background="@drawable/cpr_pic"
                        android:onClick="onButtonShowPopupWindowClick"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/cpr"
                        android:layout_width="36dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:fontFamily="@font/poppins_regular"
                        android:lineHeight="18sp"
                        android:lineSpacingExtra="-5sp"
                        android:text="cpr"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/heart_attack_game"
                        android:layout_width="165dp"
                        android:layout_height="165dp"
                        android:background="@drawable/heart_attack_pic"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/heart_attack"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:fontFamily="@font/poppins_regular"
                        android:lineHeight="18sp"
                        android:lineSpacingExtra="-5sp"
                        android:text="Heart Attack"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="27dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/asthma_game"
                        android:layout_width="165dp"
                        android:layout_height="165dp"
                        android:background="@drawable/asthma_pic"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/asthma"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:fontFamily="@font/poppins_regular"
                        android:lineHeight="18sp"
                        android:lineSpacingExtra="-5sp"
                        android:text="asthma"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/chocking_game"
                        android:layout_width="165dp"
                        android:layout_height="165dp"
                        android:background="@drawable/chocking_pic"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/chocking"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:fontFamily="@font/poppins_regular"
                        android:lineHeight="18sp"
                        android:lineSpacingExtra="-5sp"
                        android:text="Choking"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="27dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/epileptic_game"
                        android:layout_width="165dp"
                        android:layout_height="165dp"
                        android:background="@drawable/epileptic_pic"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/epileptic"
                        android:layout_width="36dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:fontFamily="@font/poppins_regular"
                        android:lineHeight="18sp"
                        android:lineSpacingExtra="-5sp"
                        android:text="Epileptic"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/burn_game"
                        android:layout_width="165dp"
                        android:layout_height="165dp"
                        android:background="@drawable/burn_pic"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/burn"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:fontFamily="@font/poppins_regular"
                        android:lineHeight="18sp"
                        android:lineSpacingExtra="-5sp"
                        android:text="Burns"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent" />
</LinearLayout>