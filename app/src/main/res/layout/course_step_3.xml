<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/step_3"
        android:layout_width="181dp"
        android:layout_height="55dp"
        android:gravity="center_horizontal|top"
        android:text="Step 3"
        android:textColor="#000000"
        android:textSize="36sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="146dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="100dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/check_for_b"
        android:layout_width="190dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="13sp"
        android:text="Check for breathing"
        android:textColor="#000000"
        android:textSize="16sp"
        android:translationY="-6.61sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="222dp"
        android:layout_centerHorizontal="true"/>


    <include
        layout="@layout/bottom_nav"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/step_3_pic"
        android:layout_width="254dp"
        android:layout_height="231dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="193dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="427dp"
        android:background="@drawable/step_3_pic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="269dp" />

    <TextView
        android:id="@+id/step_3_text_1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-4sp"
        android:text=" ● Make sure the airway is not blocked."
        android:textColor="#000000"
        android:textSize="21sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="547dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="60dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/step_3_text_2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-4sp"
        android:text=" ●If the mouth is closed, tilt their head back; so it opens up.
"
        android:textColor="#000000"
        android:textSize="21sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="614dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="590dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/go_right1B"
        android:layout_width="186dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="188dp"
        android:layout_marginEnd="18dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:contextClickable="false"
        android:onClick="onClick"
        android:visibility="visible" />

    <include
        layout="@layout/topnav"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="140dp" />
</RelativeLayout>