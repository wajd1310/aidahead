<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/bottom_nav" />
    <include layout="@layout/topnav"/>

    <TextView
        android:id="@+id/step_1"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="103dp"
        android:gravity="center_horizontal|top"
        android:text="Step 1"
        android:textColor="#000000"
        android:textSize="36sp" />

    <RelativeLayout
        android:id="@+id/map_locatio"
        android:layout_width="236dp"
        android:layout_height="236dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="173dp"
        android:background="@drawable/call_emergency_step_1_pic" />

    <TextView
        android:id="@+id/share_your_"
        android:layout_width="268dp"
        android:layout_height="216dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="443dp"
        android:gravity="center_horizontal|top"
        android:text="Share your location and phone number."
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/provide"
        android:layout_width="268dp"
        android:layout_height="216dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="542dp"
        android:gravity="center_horizontal|top"
        android:text="Provide some details."
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>