<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="350dp"
        android:layout_height="337dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="247dp"
        android:background="@drawable/button"
        android:onClick="repeat" />


    <Button
        android:id="@+id/start"
        android:layout_width="192dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="98dp"
        android:elevation="20dp"
        android:onClick="start"
        android:text="start"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:background="@drawable/backgr"
        />

    <View
        android:id="@+id/check_1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/right_answer_mini_game" />


    <TextView
        android:id="@+id/right"
        android:layout_width="41dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="271dp"
        android:layout_marginTop="195dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="18sp"
        android:text="0"
        android:textSize="20sp" />

    <View
        android:id="@+id/remove_1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="183dp"
        android:background="@drawable/wrong_answer_mini_game" />

    <TextView
        android:id="@+id/wrong"
        android:layout_width="41dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="194dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="18sp"
        android:text="0"
        android:textSize="20sp"
       />


    <include layout="@layout/bottom_nav" />

    <include layout="@layout/topnav"/>
</RelativeLayout>