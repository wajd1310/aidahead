<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/bottom_nav"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-72dp"></include>

    <include
        android:id="@+id/include2"
        layout="@layout/topnav" />

    <TextView
        android:id="@+id/step_1_b"
        android:layout_width="250dp"
        android:layout_height="254dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="
Gently tap his shoulder and ask 'Are you OK?' in a loud, clear voice."
        android:textColor="#000000"
        android:textSize="20sp"
        android:translationY="-1sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="71dp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="475dp" />

    <TextView
        android:id="@+id/step_1_b_2"
        android:layout_width="250dp"
        android:layout_height="254dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text=" If he responds agreement; CPR is not required."
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:translationY="-1sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="71dp"

        tools:layout_editor_absoluteY="597dp" />

    <View
        android:id="@+id/step_1_b_pic"
        android:layout_width="270dp"
        android:layout_height="272dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/step_1_b_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/go_right1B"

        android:layout_width="211dp"
        android:layout_height="826dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="onClick"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.36" />


</androidx.constraintlayout.widget.ConstraintLayout>